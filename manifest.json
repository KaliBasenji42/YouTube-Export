{
  "manifest_version": 3,
  
  "name": "YouTube Export",
  "description": "Adds tools for YouTube playlists, such as: Costum randomization & export.",
  "version": "1.0",
  
  "icons": {
    "16": "imgs/icon16.png",
    "32": "imgs/icon32.png",
    "48": "imgs/icon48.png",
    "128": "imgs/icon128.png"
  },
  
  "background" : {
    "service_worker": "background.js"
  },
  
  "content_scripts": [{
    "js": ["script.js"],
    "run_at": "document_idle",
    "matches": ["*://*.youtube.com/*"]
  }],
  
  "permissions": ["tabs"],
  
  "action": {
    "default_title": "YT Export",
    "default_popup": "popup.html"
  }
}